
@model RoleToReturnDto

@{
    ViewData["Title"] = "Update";
}

<h1>Update Role</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">

    <partial name="EmployeePartialView/_CreateUpdatePartialView" model="@Model" />

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" asp-controller="Role" class="btn btn-success"> Add Or Remove User </a>

    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-outline-warning" />
        <a asp-action="Index" asp-controller="Role" class="btn btn-light">Back To List</a>
    </div>
</form>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}