@model List<UsersEnrollDto>

@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}

<form asp-action="AddOrRemoveUsers" asp-route-roleId="@RoleId" class="p-4 border rounded shadow bg-white">
    <h2 class="text-center text-primary mb-4">Manage Users</h2>

    <div class="mb-3">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label fw-bold"> @Model[i].UserName </label>
            </div>

            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        }
    </div>

    <div class="d-flex justify-content-between mt-3">
        <input type="submit" value="Update" class="btn btn-outline-success px-4" />
        <a asp-action="Update" asp-route-id="@RoleId" class="btn btn-outline-danger px-4">Cancel</a>
    </div>
</form>
