
@model Department

@{
    ViewData["Title"] = "Update";
}

<h1>Update Page</h1>

<br />
<br />

 <form asp-action="Update" method="Post"> 
     <div class="my-3"> 
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" value="@Model.Code"  /> 
     </div> 

    <div class="my-3"> 
        <label asp-for="Name" class="col-form-label"></label>
       <input asp-for="Name" class="form-control" value="@Model.Name"  /> 
     </div> 

    <div class="my-3"> 
        <label asp-for="CreateAt" class="col-form-label"></label> 
        <input asp-for="CreateAt" class="form-control" value="@Model.CreateAt.ToString("yyyy-MM-dd HH:mm")" /> 
     </div> 

   <div class="my-3"> 
        <input type="submit" value="Update" class="btn btn-warning" /> 
         <a asp-action="Index" class="btn btn-light">Back To List</a> 
     </div> 
 </form> 