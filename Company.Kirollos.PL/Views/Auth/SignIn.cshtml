
@model SignInDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" type="text/css" />

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-3 alert alert-info"></div>


		<form asp-action="SignIn" method="post">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemmemberMe" class="checkbox">
					<span>Remmember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		@* Sign in with google  *@
		<br />
		<div style="display: flex; flex-direction: column; align-items: center; gap: 15px; margin: 20px 0;">
			<a asp-action="GoogleLogin" style="display: flex; align-items: center; width: 80%; max-width: 300px; padding: 10px 15px; border-radius: 4px; text-decoration: none; font-weight: 500; transition: all 0.3s ease; background-color: #ffffff; border: 1px solid #dadce0; color: #3c4043;">
				<img src="~/images/googlelogo.png" style="width: 24px; height: 24px; margin-right: 10px;" alt="Google">
				Sign in with Google
			</a>
			<a asp-action="FacebookLogin" style="display: flex; align-items: center; width: 80%; max-width: 300px; padding: 10px 15px; border-radius: 4px; text-decoration: none; font-weight: 500; transition: all 0.3s ease; background-color: #1877f2; border: 1px solid #1877f2; color: white;">
				<img src="~/images/facebooklogo.png" style="width: 24px; height: 24px; margin-right: 10px;" alt="Facebook">
				Sign in with Facebook
			</a>
		</div>

		<br />

		<p>Don't have an account? <a asp-action="SignUp"> Create New Account ?</a></p>
		<br />
		<p> <a asp-action="ForgetPassword" > Forgot Password ?</a></p>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}